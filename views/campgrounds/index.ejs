<%- include ('../partials/header.ejs') %>

<header class = "jumbotron">
	<h1><span class="glyphicon glyphicon-tent"></span> Welcome To WeCamp!</h1>
	<p>View our hand-picked campgrounds from all over the world</p>
	<p>
		<form  action ="/campgrounds" method="GET" class="form-inline pull-right">
			<div class="form-group">
				<input type="text" name="search" placeholder="Campground search..." class="form-control">
				<input type="submit" value="Search" class="btn btn-default">
			</div>
		</form>
	</p>
	<p>
		<a href="/campgrounds/new" class = "btn btn-primary btn-lg">Add New Campground</a>
	</p>
</header>

<div class="row text-center" style="display:flex; flex-wrap:wrap; align-items:stretch; justify-content: center">
	<% if(noMatch){ %>
		<div class="col-md-12">
			<h1><%= noMatch %></h1>
			<div>
				<a href="/campgrounds" class="btn btn-lg btn-primary">View All Campgrounds</a>
			</div>
		</div>
	<% }%>
	
	<% campgrounds.forEach(function(campground){ %>
		<div class = "col-md-3 col-sm-6 campground-items">
			<div class="thumbnail campground-item">
				<img src="<%= campground.image %>">  
				<div class="caption">
					<h4><%= campground.name %></h4>		
					<% if(campground.rating == 0){ %>
						<em>No reviews yet.</em>
					<% } else {%>
						<span class="fa fa-star checked"></span>
						<span class="fa fa-star <% if(campground.rating > 1.5){ %> checked <%}%> "></span>
						<span class="fa fa-star <% if(campground.rating > 2.5){ %> checked <%}%> "> </span>
						<span class="fa fa-star <% if(campground.rating > 3.5){ %> checked <%}%> "> </span>
						<span class="fa fa-star <% if(campground.rating > 4.5){ %> checked <%}%> "> </span>
					<% } %>
				</div>
				<p>
					<a href="/campgrounds/<%=campground._id %>" class = "btn btn-primary"> More Info</a>
				</p>
			</div>
		</div>
	<% }) %>
</div>


<%if(!noMatch){%>
<!-- PAGINATION SECTION -->
<div class="row text-center" >
	<% if(pages && pages > 0){ %>
		<ul class="pagination text-center">
			<%if( current == 1){%>
				<li class="disabled"><a>First</a></li>
			<% }else{ %>
				<li><a href="/campgrounds<%if(search){%>?search=<%=search%><%}%>">First</a></li>
			<% } %>

			<% if(current == 1){%>
				<li class="disabled"><a><i class="fa fa-angle-double-left" aria-hidden="true"></i></a></li>	
			<%}else{%>
				<li><a href="/campgrounds?page=<%= Number(current)-1%><%if(search){%>&search=<%=search%><%}%>"><i class="fa fa-angle-double-left" aria-hidden="true"></i></a></li>
			<%}%>

			<%var i = (Number(current) > 5 ? Number(current)-4 : 1) %>
			<%if(i !== 1){%>
				<li class="disabled"><a>...</a></li>
			<%}%>

			<%for( ; i <= (Number(current)+4) && i <= pages; i++){%>
				<%if(i == current){%>
					<li class="active"><a><%= i %></a></li>
				<%}else{%>
					<li><a href="/campgrounds?page=<%= i%><%if(search){%>&search=<%= search%><%}%>"><%= i %></a></li>
				<%}%>
				<%if(i == Number(current)+4 && i < pages){%>
					<li class="disabled"><a>...</a></li>
				<%}%>
			<%}%>

			<%if(current == pages){%>
				<li class="disabled"><a><i class="fa fa-angle-double-right" aria-hidden="true"></i></a></li>
			<%}else{%>
				<li><a href="/campgrounds?page=<%=Number(current)+1%><%if(search){%>&search=<%= search %><%}%>"><i class="fa fa-angle-double-right" aria-hidden="true"></i></a></li>
			<%}%>

			<%if(current == pages){%>
				<li class="disabled"><a>Last</a></li>	
			<%}else{%>
				<li><a href="/campgrounds?page=<%=pages%><%if(search){%>&search=<%= search%><%}%>">Last</a></li>
			<%}%>


		</ul>
	<% } %>
</div>

<%}%>

<%- include ('../partials/footer.ejs') %>
<script type="text/javascript">
    function changePageTitle() { 
        newPageTitle = 'WeCamp | Home'; 
        document.title = newPageTitle; 
    } 
    changePageTitle();
</script>
<%- include ('../partials/header.ejs') %>


<header class = "jumbotron">
	<h1>Welcome To YelpCamp!</h1>
	<p>View our hand-picked campgrounds from all over the world</p>
	<p>
		<form  action ="/campgrounds" method="GET" class="form-inline pull-right">
			<div class="form-group">
				<input type="text" name="search" placeholder="Campground search..." class="form-control">
				<input type="submit" value="Search" class="btn btn-default">
			</div>
		</form>
	</p>
	<p>
		<a href="/campgrounds/new" class = "btn btn-primary btn-lg">Add New Campground</a>
	</p>
	
</header>

<div class="row text-center" style="display:flex; flex-wrap:wrap;">
	<% if(noMatch){ %>
		<div class="col-md-12">
			<h1><%= noMatch %></h1>
		</div>
	<% }%>
	
	<% campgrounds.forEach(function(campground){ %>
		<div class = "col-md-3 col-sm-6">
			<div class="thumbnail campground-item">
				<img src="<%= campground.image %>">  
				<div class="caption">
					<h4><%= campground.name %></h4>		
					<% if(campground.rating == 0){ %>
						<em>No reviews yet.</em>
					<% } else {%>
						<span class="fa fa-star checked"></span>
						<span class="fa fa-star <% if(campground.rating > 1.5){ %> checked <%}%> "></span>
						<span class="fa fa-star <% if(campground.rating > 2.5){ %> checked <%}%> "> </span>
						<span class="fa fa-star <% if(campground.rating > 3.5){ %> checked <%}%> "> </span>
						<span class="fa fa-star <% if(campground.rating > 4.5){ %> checked <%}%> "> </span>
					<% } %>
				</div>
				<p>
					<a href="/campgrounds/<%=campground._id %>" class = "btn btn-primary"> More Info</a>
				</p>
			</div>
		</div>
	<% }) %>
</div>



<%- include ('../partials/footer.ejs') %>
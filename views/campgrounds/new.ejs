<%- include('../partials/header') %>


<div class="row">		
	<h1 class="text-center">Create a New Campground</h1>
	<div class="form">
		<form action="/campgrounds"  method="POST">
			<div class="form-group">
				<input class ="form-control" type="text" name="name" placeholder="Name" required>
			</div>
			<div class="form-group">
				<input class ="form-control" type="number" name="cost" placeholder="Cost" min="0" step="0.05" required>
			</div>
			<div class="form-group">
				<input class ="form-control" type="text" name="image" placeholder="Image Url" required>
			</div>
			<div class="form-group">
				<input class ="form-control" type="text" name="description" placeholder="Description" required>
			</div>
			<div class="form-group">
				<button class="btn btn-primary btn-lg btn-block">Submit</button>
			</div>
		</form>
		<a href="/campgrounds">Go Back</a>
	</div>	
</div>


<%- include('../partials/footer') %>
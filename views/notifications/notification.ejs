<%- include('../partials/header') %>

<div class="row">
	<div class="col-sm-offset-1 notifications">
		<h1>Notifications</h1>
		<ul>
			<% allNotifications.forEach((notification)=>{ %>
				<li>
					<a href="/campgrounds/<%= notification.campgroundId %>">
						<span class="text-capitalize"><%= notification.username %></span> created a new campground. 
					</a>
				</li>
			<% }); %>

			<% if(allNotifications.length < 1){ %>
				<p class="text">No notifications to show</p>
			<% } %>
		</ul>
		<div style="margin-top:3vw"><a href="/campgrounds" class="">Go Back</a></div>
	</div>	
</div>
<%- include('../partials/footer') %>

<script type="text/javascript">
		$(document).ready(function() {
			$('.nav > li > a:contains("Notifications")').parent().addClass('active');
		});
	</script>
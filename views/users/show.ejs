<%- include('../partials/header') %>

<div class="row">
	<div class="col-sm-4">
		<h1><%= user.firstName + " " + user.lastName %></h1>
		<div class="thumbnail">
			<img src="<%= user.avatar %>" alt="user profile image">	
			<div class="caption">
				<a href="mailto:<%= user.email %>"><%= user.email %></a>
			</div>
		</div>
		<div class="text-right"><a href="/users/<%= user._id %>/edit">Update Profile</a></div>

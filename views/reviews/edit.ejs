<%- include('../partials/header') %>

<div class="row notifications">
	<h1 class="text-center">Update Review</h1>
	<div class="form">
		<form action="/campgrounds/<%=campground_id%>/reviews/<%=review._id%>?_method=PUT" method="POST">
			<div class="form-group">
				<label>Leave a rating: </label>
				<fieldset class="starability-basic form-group" id="rating">
					<div>
						<input type="radio" name="review[rating]" id="first-rate5" value="5" checked>
						<label title="5 stars - Amazing" >
							<%- '<span class="fa fa-star checked"></span>'.repeat(5)%>
						</label>
					</div>
					<div>
						<input type="radio" name="review[rating]" id="first-rate4" value="4">
						<label title="4 stars - Very good">
							<%- '<span class="fa fa-star checked"></span>'.repeat(4)%>
						</label>
					</div>
					<div>
						<input type="radio" name="review[rating]" id="first-rate3" value="3">
						<label title="3 stars - Average">
							<%- '<span class="fa fa-star checked"></span>'.repeat(3)%>
						</label>
					</div>
					<div>
						<input type="radio" name="review[rating]" id="first-rate2" value="2">
						<label title="2 stars - Not good">
							<%- '<span class="fa fa-star checked"></span>'.repeat(2)%>
						</label>
					</div>
					<div>
						<input type="radio" name="review[rating]" id="first-rate1" value="1">
						<label title="1 stars - Terrible">
							<%- '<span class="fa fa-star checked"></span>'.repeat(1)%>
						</label>
					</div>
				</fieldset>
			</div>
			<div class="form-group">
				<textarea class="form-control" type="text" name="review[text]" placeholder="Write a review for this campground..." rews="5"><%= review.text %></textarea>
			</div>
			<div class="form-group">
				<button class="btn btn-primary btn-block">Submit a Review</button>
			</div>
		</form>
		<a href="/campgrounds/<%=campground_id%>">Go Back</a>
	</div>
</div>

<%- include('../partials/footer') %>